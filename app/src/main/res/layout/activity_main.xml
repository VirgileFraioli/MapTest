<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.example.maptest.DrawingView
        android:id="@+id/drawing_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/Rotate_Right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="487dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="30dp"
        android:text="Rotate Right"
        app:layout_constraintBottom_toTopOf="@+id/Take"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/Rotate_Left"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/Rotate_Left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="486dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="31dp"
        android:text="Rotate left"
        app:layout_constraintBottom_toTopOf="@+id/Shoot"
        app:layout_constraintEnd_toStartOf="@+id/Rotate_Right"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/Move"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="27dp"
        android:layout_marginEnd="101dp"
        android:layout_marginBottom="115dp"
        android:text="Move "
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/Rotate_Right"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Rotate_Left" />

    <Button
        android:id="@+id/Shoot"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="26dp"
        android:layout_marginBottom="115dp"
        android:text="Shoot"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/Take"
        app:layout_constraintStart_toEndOf="@+id/Move"
        app:layout_constraintTop_toBottomOf="@+id/Rotate_Left" />

    <Button
        android:id="@+id/Take"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="26dp"
        android:layout_marginBottom="116dp"
        android:text="Take"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/Shoot"
        app:layout_constraintTop_toBottomOf="@+id/Rotate_Right" />


</androidx.constraintlayout.widget.ConstraintLayout>